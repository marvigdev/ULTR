<main
  class='container-fluid h-100 d-flex flex-column justify-content-center align-items-center m-auto'
>
  {{#if error}}
    <div class='alert alert-danger'>{{error}}</div>
  {{/if}}

  <div class='card shadow w-100'>
    <div class='card-body'>
      <h1 class='title'>Login</h1>

      <form action='/login' method='post'>
        <div class='mb-3'>
          <label class='form-label'>Your username</label>
          <input name='username' class='form-control' required />
        </div>

        <div class='mb-3'>
          <label class='form-label'>Your password</label>
          <input
            name='password'
            type='password'
            class='form-control'
            required
          />
        </div>

        <button class='btn btn-primary w-100'>Log in</button>
      </form>
    </div>
  </div>

  <a class='mt-3' href='/register'>I don't have an account</a>
</main>

<style>
main {
  width: 25%;
}

@media(max-width: 992px){
  main {
    width: auto;
  }
}
</style>