<nav class='navbar navbar-expand-lg navbar-dark bg-primary'>
  <div class='d-flex justify-content-around align-items-center container-fluid'>
    <a href="/create">
      <button type='submit' class='btn btn-secondary btn-sm'>Add link</button>
    </a>
    <h1 class='navbar-brand m-0' href='#'>Useful Links to Remember</h1>
    <form class='m-0' action='/logout' method='post'>
      <button type='submit' class='btn btn-secondary btn-sm'>Log Out</button>
    </form>
  </div>
</nav>

<main class='d-flex flex-column m-auto p-3'>
  <form class='d-flex gap-2'>
    <div class='w-100'>
      <input
        class='form-control'
        name='query'
        placeholder="I'm searching for..."
      />
      <small class='form-text text-muted'>
        {{#if queryText}}
          {{queryText}}
        {{else}}
          You can use # to search by tag, like in #node or #html.
        {{/if}}
      </small>
    </div>

    <button class='btn btn-primary' style='height: fit-content;'>Search</button>
  </form>

  <section id="link-list">
    {{#each links}}
      <div class="card m-1">
        <div class="card-body">
          <h5 class="card-title d-flex justify-content-between align-items-center">
            <a href="{{this.link}}" target="_blank">{{this.title}}</a>       
          </h5>
          <p class="card-text">{{this.description}}</p>

          <div class="d-flex flex-wrap gap-1">
            {{#each this.tags}}
              <span class="badge bg-primary">{{this}}</span>
            {{/each}}
            <button class="border-0 badge bg-light" onclick="deleteLink('{{this._id}}')">Delete this link</button>
          </div>
        </div>
      </div>
    {{/each}}
  </section>
</main>

<style>
  a {
    text-decoration: none;
  }

  main{ 
    width: 75%;
  } 

  .card {
    transition: all 0.2s ease-in-out;
    width: 300px;
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .card:hover .delete{
    display: block;
  }

  .delete {
    display: none;
  }

  .delete:hover {
    cursor: pointer;
  }

  @media(max-width: 992px){ 
    main { 
      width: 100%; 
    }

    .card {
      width: 100%;
    }
  }
</style>

<script
  src='https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js'
></script>
<script>
  //Masonry
  const element = document.getElementById('link-list'); 
  const msry = new Masonry(element, { itemSelector: '.card'})

  //Delete link logic
  function deleteLink(linkId){
    if(confirm("Are you sure you want to delete this link?")) {
      fetch(`/delete?linkId=${linkId}`, {
        method: 'DELETE'
      }).then(() => {
        location.reload(true);
      })
    }
  }
</script>